{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["jest", "node"],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".expo",
    ".expo-shared",
    "dist",
    "build"
  ]
}
